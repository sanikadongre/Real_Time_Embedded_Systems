#include <stdio.h>
#include <stdint.h>
#include <stdlib.h>
#include <pthread.h>

void* addition_1(uint32_t* output_1)
{
    uint16_t i = 0;
    *(output_1) = 0;
    for(i=1; i<99; i++)
    {
        *(output_1)+= i;
    }
    return (void*) output_1;
}

void* addition_2(uint32_t* output_2)
{
   
    uint16_t j = 0;
    *(output_2) = 0;
    for(j=100; j<199; j++)
    {
        *(output_2)+= j;
    }
    return (void*) output_2;
}

void* addition_3(uint32_t* output_3)
{
    
    uint16_t k = 0;
     *(output_3) = 0;
    for(k=200; k< 299; k++)
    {
        *(output_3)+= k;
    }
    return (void*) output_3;
}

void main()
{
     pthread_t thread1, thread2, thread3;
     char *message1 = "Thread 1";
     char *message2 = "Thread 2";
     char *message3 = "Thread 3";
     int create_1, create_2, create_3;
     void* result_1; 
     void* result_2;
     void* result_3;
     create_1 = pthread_create( &thread1, NULL, addition_1(), &result_1);
     create_2 = pthread_create( &thread2, NULL, addition_2(), &result_2);
     create_3 = pthread_create( &thread3, NULL, addition_3(), &result_3);
     pthread_join( thread1,&result_1);
     pthread_join( thread2, &result_2); 
     pthread_join( thread3, &result_3);
     total = *((uint32_t*)result_1) + *((uint32_t*)result_2) + *((uint32_t*)result_3);
     printf("The total of numbers from 0 to 299 is %d\n", total);
}
